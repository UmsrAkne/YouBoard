<UserControl
    x:Class="YouBoard.Views.Controls.DirtyAwareInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:YouBoard.Models"
    d:DataContext="{d:DesignInstance models:IssueWrapper}"
    mc:Ignorable="d">
    <UserControl.Template>
        <ControlTemplate TargetType="{x:Type UserControl}">
            <Border
                x:Name="RootBorder"
                Padding="2"
                BorderThickness="1,1,1,0"
                CornerRadius="6">

                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="1" />

                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsDirty, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                <Setter Property="Background" Value="#40B39DDB" />
                                <Setter Property="BorderBrush" Value="MediumPurple" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <ContentPresenter />
            </Border>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>