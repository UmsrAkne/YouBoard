<UserControl
    x:Class="YouBoard.Views.BulkCreateIssuePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:YouBoard.Views.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:YouBoard.ViewModels"
    Width="800"
    Height="500"
    d:DataContext="{d:DesignInstance viewModels:BulkCreateIssuePageViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:IssueTypeToStringConverter x:Key="IssueTypeToStringConverter" />
        <converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter" />
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            FontSize="20"
            FontWeight="Bold"
            Text="Bulk Create Issues" />

        <TextBox
            Grid.Row="1"
            Height="80"
            MaxHeight="80"
            AcceptsReturn="True"
            Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />

        <!--  Parsed issues list  -->
        <DataGrid
            Grid.Row="2"
            Margin="0,12,0,0"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            HeadersVisibility="Column"
            ItemsSource="{Binding ParsedIssues}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Header="Title" />
                <DataGridTextColumn
                    Width="3*"
                    Binding="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Header="Description" />
                <DataGridTemplateColumn Width="*" Header="Type">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Type, Converter={StaticResource IssueTypeToStringConverter}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding DataContext.AvailableIssueTypes, RelativeSource={RelativeSource AncestorType=UserControl}}" SelectedItem="{Binding Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource IssueTypeToStringConverter}}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding EstimatedDuration, Converter={StaticResource TimeSpanToStringConverter}, ConverterParameter=TotalMinutes}"
                    Header="Estimated (min)" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel
            Grid.Row="3"
            Margin="0,12,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">

            <Button
                Width="140"
                Margin="0,0,8,0"
                Command="{Binding CreateIssueListCommand}"
                Content="Parse &amp; Preview" />

            <Button
                Width="100"
                Command="{Binding CancelCommand}"
                Content="Close" />
        </StackPanel>
    </Grid>
</UserControl>