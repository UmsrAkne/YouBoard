<UserControl
    x:Class="YouBoard.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:YouBoard.ViewModels"
    Width="600"
    Height="480"
    d:DataContext="{d:DesignInstance viewModels:SettingsPageViewModel}"
    d:DesignHeight="400"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Settings content with TabControl -->
        <TabControl Grid.Row="0">
            <!-- Initial tab with simple centered ListBox -->
            <TabItem Header="General">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <ListBox
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        ItemsSource="{Binding YamlTemplates}"
                        SelectedItem="{Binding SelectedTemplateName}" />
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Bottom buttons -->
        <StackPanel
            Grid.Row="1"
            Margin="0,12,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="100"
                Margin="0,0,8,0"
                Command="{Binding SaveCommand}"
                Content="Save" />
            <Button
                Width="100"
                Command="{Binding CloseCommand}"
                Content="Close" />
        </StackPanel>
    </Grid>
</UserControl>