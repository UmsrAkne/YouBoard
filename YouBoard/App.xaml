<prism:PrismApplication
    x:Class="YouBoard.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:system="clr-namespace:System;assembly=System.Runtime">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme
                    BaseTheme="Light"
                    PrimaryColor="DeepPurple"
                    SecondaryColor="Lime" />

                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <system:Double x:Key="GlobalFontSize">18</system:Double>
            <SolidColorBrush x:Key="DarkBgBrush" Color="DarkSlateBlue" />
            <SolidColorBrush x:Key="MediumBgBrush" Color="DodgerBlue" />
            <SolidColorBrush x:Key="LightBgBrush" Color="SteelBlue" />

        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>